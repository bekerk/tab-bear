{
  "name": "tab-bear",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build src/background/index.ts src/content/index.ts src/popup/index.tsx src/editor/index.tsx --outdir dist --target=browser",
    "dev": "bun build src/background/index.ts src/content/index.ts src/popup/index.tsx --outdir dist --watch --target=browser",
    "bundle": "./bundle_dist.sh",
    "lint": "bunx eslint src --ext .ts,.tsx",
    "test": "bun test",
    "format": "bunx prettier --write src",
    "format:check": "bunx prettier --check src"
  },
  "dependencies": {
    "@material/web": "^2.4.1",
    "preact": "^10.28.0",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.32",
    "@types/sinon-chrome": "^2.2.16",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "sinon-chrome": "^3.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
