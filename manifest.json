{
    "manifest_version": 3,
    "name": "Tab Bear",
    "version": "1.0.0",
    "description": "Tab Bear is a cool secret thing...",
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "downloads"
    ],
    "host_permissions": ["http://*/*", "https://*/*"],
    "action": {
        "default_icon": {
            "16": "assets/tab-bear-16.png",
            "48": "assets/tab-bear-48.png",
            "128": "assets/tab-bear-128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/tab-bear-16.png",
        "48": "assets/tab-bear-48.png",
        "128": "assets/tab-bear-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/tab-bear-munch.png",
                "content/indicator.css"
            ],
            "matches": ["http://*/*", "https://*/*"]
        }
    ]
}